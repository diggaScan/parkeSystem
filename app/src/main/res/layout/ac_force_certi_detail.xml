<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_white"
    android:orientation="vertical"
    tools:context=".view_controller.police.Ac_request_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_circle"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/detail_frame_padding"
            android:background="@drawable/name_circle_bkg"
            android:gravity="center"
            android:text="建国"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="王建国" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/detail_frame_padding"
        android:layout_marginRight="@dimen/detail_frame_padding"
        android:background="@color/divider_line_color" />

    <RelativeLayout
        android:id="@+id/action_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_white"
        android:padding="@dimen/detail_frame_padding">

        <TextView
            android:id="@+id/request_id_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/detail_item_padding"
            android:text="强制凭证凭证单号: " />

        <TextView
            android:id="@+id/request_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/request_id_str"
            android:layout_toRightOf="@id/request_id_str"
            android:text="4451023 000973681"
            android:textColor="@color/black" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_cate_height"
        android:layout_marginLeft="@dimen/detail_frame_padding"
        android:layout_marginRight="@dimen/detail_frame_padding"
        android:background="@color/divider_line_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_one"
            android:background="@color/divider_line_color"
            android:gravity="center"

            android:text="  详情" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/implementee_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_white"
        android:padding="@dimen/template_item_padding">

        <TextView
            android:id="@+id/onwer_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/detail_item_padding"
            android:text="当事人姓名: " />

        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/onwer_str"
            android:layout_toRightOf="@id/onwer_str"
            android:text="李详"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/owner_id_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onwer_str"
            android:padding="@dimen/detail_item_padding"
            android:text="身份证号码: " />

        <TextView
            android:id="@+id/owner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/owner_id_str"
            android:layout_toRightOf="@id/owner_id_str"
            android:text="330100188301036673"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/drive_license_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_id"
            android:padding="@dimen/detail_item_padding"
            android:text="驾驶证号码: " />

        <TextView
            android:id="@+id/drive_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/drive_license_str"
            android:layout_toRightOf="@id/drive_license_str"
            android:text="330100653298"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/contact_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drive_license"
            android:padding="@dimen/detail_item_padding"
            android:text="联系电话: " />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/contact_str"
            android:layout_toRightOf="@id/contact_str"
            android:text="13656748888"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/car_num_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_str"
            android:layout_marginTop="-1dp"
            android:padding="@dimen/detail_item_padding"
            android:text="车牌号码: " />

        <TextView
            android:id="@+id/car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/car_num_str"
            android:layout_toRightOf="@id/car_num_str"
            android:text="苏A84293"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/car_type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_num_str"
            android:padding="@dimen/detail_item_padding"
            android:text="车辆类型: " />

        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/car_type_str"
            android:layout_toRightOf="@id/car_type_str"
            android:text="重型自卸货车"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/num_type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_type_str"
            android:padding="@dimen/detail_item_padding"
            android:text="车牌类型: " />

        <TextView
            android:id="@+id/num_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/num_type_str"
            android:layout_toRightOf="@id/num_type_str"
            android:text="大型汽车"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/force_reason_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_type"
            android:padding="@dimen/detail_item_padding"
            android:text="强制措施原因 " />

        <TextView
            android:padding="3dp"
            android:id="@+id/force_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/force_reason_str"
            android:text="《道路交通安全法》第五十六条规定，机动车应当在规定地点停放。禁止在人行道上停放机动车；但是，依照本法第三十三条规定施划的停车泊位除外。在道路上临时停车的，不得妨碍其他车辆和行人通行。"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/action_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/force_reason"
            android:padding="@dimen/detail_item_padding"
            android:text="强制措施: " />

        <TextView
            android:id="@+id/force_certi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/action_str"
            android:layout_toRightOf="@id/action_str"
            android:text="扣留机动车"
            android:textColor="@color/black" />


    </RelativeLayout>
</LinearLayout>