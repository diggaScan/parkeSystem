<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/action_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/template_cate_height"
            android:background="@color/divider_line_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon_one"
                android:background="@color/divider_line_color"
                android:gravity="center"
                android:text="  扣车详情" />

            <ImageView
                android:id="@+id/action_info_arrow"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/ic_expand_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/action_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_white"
            android:padding="@dimen/template_item_padding">

            <TextView
                android:id="@+id/record_id_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/template_item_detail_padding"
                android:text="移交单号: " />

            <TextView
                android:id="@+id/record_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/record_id_str"
                android:layout_toRightOf="@id/record_id_str"
                android:text="1603764"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/force_certi_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/record_id_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="强制处罚凭证号: " />

            <TextView
                android:id="@+id/force_certi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/force_certi_str"
                android:layout_toRightOf="@id/force_certi_str"
                android:text="3414216482"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/car_status_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/force_certi_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车辆状态: " />

            <TextView
                android:id="@+id/car_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/car_status_str"
                android:layout_toRightOf="@id/car_status_str"
                android:text="停入"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tow_car_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/car_status"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/car_status"
                android:textColor="@color/color_primary_blue" />

            <TextView
                android:id="@+id/accident_id_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_status_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="事故编号: " />

            <TextView
                android:id="@+id/accident_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/accident_id_str"
                android:layout_toRightOf="@id/accident_id_str"
                android:text="1742222584"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/reason_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/accident_id_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="扣车原因: " />

            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/reason_str"
                android:layout_toRightOf="@id/reason_str"
                android:text="违法"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/help_way_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reason_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="施救情况: " />

            <TextView
                android:id="@+id/help_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/help_way_str"
                android:layout_toRightOf="@id/help_way_str"
                android:text="押送进入"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/overLoad_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_way_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="超载情况: " />

            <TextView
                android:id="@+id/overLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/overLoad_str"
                android:layout_toRightOf="@id/overLoad_str"
                android:text="超载"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/offLoad_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/overLoad_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="卸载情况: " />

            <TextView
                android:id="@+id/offLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/offLoad_str"
                android:layout_toRightOf="@id/offLoad_str"
                android:text="未卸载"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/damage_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/offLoad_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="损坏及物品清单: " />

            <TextView
                android:id="@+id/damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/damage_str"
                android:layout_toRightOf="@id/damage_str"
                android:text="无"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/temp_store_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/damage_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="暂存日期: " />

            <TextView
                android:id="@+id/temp_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/temp_store_str"
                android:layout_toRightOf="@id/temp_store_str"
                android:text="2017-04-12 17:20:09"
                android:textColor="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/car_person_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/template_cate_height"
            android:background="@color/divider_line_color">

            <ImageView
                android:id="@+id/icon_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon_two"
                android:background="@color/divider_line_color"
                android:gravity="left|center_vertical"
                android:text="  车辆及当事人信息" />

            <ImageView
                android:id="@+id/car_person_info_arrow"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/ic_expand_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/implementee_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_white"
            android:padding="@dimen/template_item_padding">

            <TextView
                android:id="@+id/onwer_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车辆单位或个人: " />

            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/onwer_str"
                android:layout_toRightOf="@id/onwer_str"
                android:text="李详"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/car_num_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/onwer_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车牌号码: " />

            <TextView
                android:id="@+id/car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/car_num_str"
                android:layout_toRightOf="@id/car_num_str"
                android:text="苏A84293"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/car_type_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_num_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车辆类型: " />

            <TextView
                android:id="@+id/car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/car_type_str"
                android:layout_toRightOf="@id/car_type_str"
                android:text="重型自卸货车"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/num_type_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_type_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车牌类型: " />

            <TextView
                android:id="@+id/num_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/num_type_str"
                android:layout_toRightOf="@id/num_type_str"
                android:text="大型汽车"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/contact_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/num_type_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="联系电话: " />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/contact_str"
                android:layout_toRightOf="@id/contact_str"
                android:text="无"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fee_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="收费标准: " />

            <TextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fee_str"
                android:layout_toRightOf="@id/fee_str"
                android:text="30.0/日360.0/次40座以上客车、10吨以上货车"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/engine_num_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fee"
                android:padding="@dimen/template_item_detail_padding"
                android:text="发动机号: " />

            <TextView
                android:id="@+id/engine_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/engine_num_str"
                android:layout_toRightOf="@id/engine_num_str"
                android:text="不详"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/car_frame_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/engine_num_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车架号: " />

            <TextView
                android:id="@+id/car_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/car_frame_str"
                android:layout_toRightOf="@id/car_frame_str"
                android:text="不详"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/address_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_frame_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="车架号: " />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/address_str"
                android:layout_toRightOf="@id/address_str"
                android:text="无"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/pic_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:paddingLeft="@dimen/template_item_detail_padding"
                android:paddingTop="@dimen/template_item_padding"
                android:text="照片"
                android:textColor="@color/black" />

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/pic_str"
                android:layout_margin="@dimen/template_item_padding"
                android:id="@+id/imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/through_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/template_cate_height"
            android:background="@color/divider_line_color">

            <ImageView
                android:id="@+id/icon_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_three" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon_three"
                android:background="@color/divider_line_color"
                android:gravity="left|center_vertical"
                android:text="  经办单位及人员" />

            <ImageView
                android:id="@+id/through_info_arrow"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/ic_expand_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/police_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_white"
            android:padding="@dimen/template_item_padding">

            <TextView
                android:id="@+id/keep_cor_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/template_item_detail_padding"
                android:text="保管单位: " />

            <TextView
                android:id="@+id/keep_cor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/keep_cor_str"
                android:layout_toRightOf="@id/keep_cor_str"
                android:text="城厢万里停车场"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/police_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/keep_cor_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="承办民警: " />

            <TextView
                android:id="@+id/police"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/police_str"
                android:layout_toRightOf="@id/police_str"
                android:text="王建国"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/hand_on_police_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/police_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="移交人: " />

            <TextView
                android:id="@+id/hand_on_police"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/hand_on_police_str"
                android:layout_toRightOf="@id/hand_on_police_str"
                android:text="衙前中队"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/recv_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hand_on_police_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="移交人: " />

            <TextView
                android:id="@+id/recv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/recv_str"
                android:layout_toRightOf="@id/recv_str"
                android:text="城厢万里停车场"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/authority_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recv_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="经办中队: " />

            <TextView
                android:id="@+id/authority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/authority_str"
                android:layout_toRightOf="@id/authority_str"
                android:text="衙前中队"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/comment_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/authority_str"
                android:padding="@dimen/template_item_detail_padding"
                android:text="备注 " />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_str"
                android:paddingLeft="@dimen/template_item_detail_padding"
                android:paddingTop="@dimen/template_item_padding"
                android:paddingBottom="@dimen/template_item_padding"
                android:text="该车辆涉运输毒品案"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/supply_comment_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment"
                android:padding="@dimen/template_item_detail_padding"
                android:text="补录入备注 " />

            <TextView
                android:id="@+id/supply_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/supply_comment_str"
                android:paddingLeft="@dimen/template_item_detail_padding"
                android:paddingTop="@dimen/template_item_padding"
                android:paddingBottom="@dimen/template_item_padding"
                android:text="排除该车辆涉案嫌疑"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
