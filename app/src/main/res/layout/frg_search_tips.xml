<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tip_str"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/tip_str">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/tip_color" />
        </LinearLayout>


        <TextView
            android:id="@+id/tip_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="搜索字段"
            android:textColor="@color/tip_color" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tip_str"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tip_str">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/tip_color" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/car_num_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/date_container"
            android:layout_toLeftOf="@id/date_container"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/car_num_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_123_numbers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="车牌号码"
                android:textColor="@color/tip_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip_str"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:src="@drawable/ic_paper_num" />

            <TextView
                android:id="@+id/date_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="移送单号"
                android:textColor="@color/tip_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/date_container"
            android:layout_toRightOf="@id/date_container"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reason_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_force_certi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="签字凭证号"
                android:textColor="@color/tip_color" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>